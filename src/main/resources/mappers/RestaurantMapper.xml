<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jack.backend.dao.RestaurantMapper">
    <resultMap id="BaseResultMapper" type="com.jack.backend.models.Restaurant">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="restaurant_name" property="restaurantName"/>
        <result column="phone_number" property="phoneNumber"/>
        <result column="email" property="email"/>
        <result column="address" property="address"/>
        <result column="description" property="description"/>
        <result column="business_hours" property="businessHours"/>
    </resultMap>
    <select id="query" resultMap="BaseResultMapper">
        select *
        from restaurants
        where id = #{id}
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into restaurants
        (username,
         password,
         restaurant_name,
         phone_number,
         email,
         address,
         description,
         business_hours)
        values (#{username},
                #{password},
                #{restaurantName},
                #{phoneNumber},
                #{email},
                #{address},
                #{description},
                #{businessHours})
    </insert>

    <update id="update">
        update restaurants
        set username=#{username},
            password=#{password},
            restaurant_name=#{restaurantName},
            phone_number=#{phoneNumber},
            email=#{email},
            address=#{address},
            description=#{description},
            business_hours=#{businessHours}
        where id = #{id}
    </update>

    <select id="login" resultMap="BaseResultMapper">
        select *
        from restaurants
        where username = #{username}
          and password = #{password}
    </select>

</mapper>